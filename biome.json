{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
    "root": true,
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "a11y": {
          "useKeyWithClickEvents": "off"
        }
      }
    },
    "formatter": {
      "enabled": false,
      "lineWidth": 90,
      "indentStyle": "tab",
      "indentWidth": 4
    },
    "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true,
      "defaultBranch": "main"
    }
}
